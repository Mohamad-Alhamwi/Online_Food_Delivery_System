@using OnlineFoodOrderingSystem.Models

@{
    ViewBag.Title = "Manage Categories";
}

@model List<Category>


<div class="container-fluid">
    <div class="row  justify-content-center">
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-header card-header-warning">
                    <h4 class="card-title">
                        Categories
                        <a href="/ManageCategories/AddCategory/">
                            <button type="button" rel="tooltip" title="Add Category" class="btn btn-white btn-link btn-sm text-right">
                                <i class="material-icons">add</i>
                            </button>
                        </a>
                    </h4>
                    <p class="card-category">Last modified on 15th September, 2016</p>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td>@category.id</td>
                                    <td>@category.category_name</td>
                                    <td>
                                        <a href="/ManageCategories/UpdateCategory/@category.id">
                                            <button type="button" rel="tooltip" title="Update Category" class="btn btn-success btn-link btn-sm">
                                                <i class="material-icons">edit</i>
                                            </button>
                                        </a>
                                    </td>
                                    <td>
                                        <!-- Button trigger delete modal -->
                                        <button type="button" rel="tooltip" title="Delete Category" class="btn btn-danger btn-link btn-sm" data-toggle="modal" data-target="#deleteCategory">
                                            <i class="material-icons">close</i>
                                        </button>
                                    </td>
                                </tr>
                                <!-- TODO: Fix the bag(when deleting, the id of first record is being used and the first record is deleted).  -->
                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteCategory" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel">Delete Category</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete the @category.category_name category?
                                            </div>
                                            <div class="modal-footer">
                                                <form action="/ManageCategories/DeleteCategory/@category.id" method="post">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <input type="submit" class="btn btn-danger" name="name" value="Yes" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>