@using OnlineFoodOrderingSystem.Models


@{
    ViewBag.Title = "Add Restaurant";
}

@model Restaurant


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Restaurant Operations</h4>
            </div>
            <div class="card-body">
                <form action="/ManageRestaurants/AddRestaurant/" method="post">

                    @if (Model != null)
                    {
                        <input type="hidden" name="id" value="@Model.id" />
                    }

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Restaurant Owner Id</label>
                                    @if (Model.restaurant_name == null)
                                    {
                                        <input type="text" class="form-control" name="id_seller" value="">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="id_seller" value="@Model.id_seller" disabled>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Restaurant Name</label>
                                    @if (Model.restaurant_name == null)
                                    {
                                        <input type="text" class="form-control" name="restaurant_name" value="">

                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="restaurant_name" value="@Model.restaurant_name">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Town</label>
                                    @if (Model.town == null)
                                    {
                                        <input type="text" class="form-control" name="town" value="">

                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="town" value="@Model.town">
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">City</label>
                                    @if (Model.city == null)
                                    {
                                        <input type="text" class="form-control" name="city" value="">

                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="city" value="@Model.city">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label for="cuisines">Cuisines</label>
                                    <select id="cuisines" class="form-control" name="cuisine_id">

                                        <!-- TODO:  cuisine_name as placeholder-->
                                        <option selected> Choose ...</option>
                                        @foreach (Cuisine cuisine in ViewBag.Cuisines)
                                        {
                                            <option value="@cuisine.id"> @cuisine.cuisine_name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

