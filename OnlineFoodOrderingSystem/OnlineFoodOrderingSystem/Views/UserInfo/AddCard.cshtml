@using OnlineFoodOrderingSystem.Models

@{
    ViewBag.Title = "Add Payment Card";
}

@model PaymentCard

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Payment Card Operations</h4>
            </div>
            <div class="card-body">
                <form action="/UserInfo/AddCard/" method="post">

                    <input type="hidden" name="id_user" value="1" />

                    @if (Model != null)
                    {
                        <input type="hidden" name="id" value="@Model.id" />
                    }
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Card Name</label>
                                    @if (Model.card_name == null)
                                    {
                                        <input type="text" class="form-control" name="card_name" value="">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="card_name" value="@Model.card_name">
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Card No</label>
                                    @if (Model.card_no == null)
                                    {
                                        <input type="text" class="form-control" name="card_no" value="">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="card_no" value="@Model.card_no">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Expiration Date</label>
                                    @if (Model.expiration_data == null)
                                    {
                                        <input type="text" class="form-control" name="expiration_data" value="">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="expiration_data" value="@Model.expiration_data">
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">CVV</label>
                                    @if (Model.cvv == 0)
                                    {
                                        <input type="text" class="form-control" name="cvv" value="">
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="cvv" value="@Model.cvv">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success pull-right">Save</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>


